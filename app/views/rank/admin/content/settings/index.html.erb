<table class="index">
  <tr>
    <th style="width: 60px; text-align: center;">編集</th>
    <th style="width: 250px;">設定名</th>
    <th>設定値</th>
  </tr>

  <% @items.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td style="text-align: center;"><%= link_to :edit, edit_rank_content_setting_path(id: item.name) %></td>
    <td><%= item.config_name %></td>
    <td><%=truncate (item.persisted? ? (item.form_type.to_s == 'password' ? '*****' :item.value_name) : '未設定'), length: 60 %></td>
  </tr>
  <% end %>

</table>

<%= form_tag 'content_settings/import', :method => :post do %>
<div class="submitters">
  <%= submit_tag '取り込む', :name => :submit_import %>
</div>
<% end %>
