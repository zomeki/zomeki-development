<div class="calendarEvents calendarTodayEvents">
  <h2 class="today"><%= @today.strftime("%Y年%-m月%-d日(#{localize_wday('%a', @today.wday)})") %>
  <%- if @content.setting_value(:show_qreki) == "1" -%>
  <span class="qreki"><%= qreki(@today) %></span>
  <%- end -%>
  </h2>

  <%- @holidays.each do |holiday| -%>
  <div class="<%= holiday.kind %>">
  <h2><%= holiday.title %></h2>
  <%= holiday.description %>
  </div>
  <%- end -%>

  <%- unless @events.empty? -%>
    <%- @event_categories.each do |category| -%>
    <h2><%= category.title %></h2>

    <table border="1">
      <tbody>
        <%- @events.each do |event| next unless event.categories.include?(category) -%>
        <tr>
          <%- if @content.show_images? -%>
          <td class="image">
            <%- if event.image_files.empty? -%>
              <%- if @content.default_image.blank? -%>
                画像がありません。
              <%- else -%>
                <%= image_tag @content.default_image %>
              <%- end -%>
            <%- else -%>
              <p class="thumb">
              <%- if event.doc.nil? %>
                <%- event.files.each.with_index(1) do |file, index| -%>
                <%= image_tag "#{file.parent.content.public_node.public_uri}#{file.parent.name}/file_contents/#{url_encode file.name}" %>
                <%- break if @content.image_cnt > 0 && index >= @content.image_cnt -%>
                <%- end -%>
              <%- else -%>
                <%- if event.doc.list_image.present? -%>
                  <%- file = event.files.select {|f| f.id == event.doc.list_image.to_i}.first || event.files.first -%>
                <%- else -%>
                  <%- event.files.each do |f| -%>
                    <%- file = f and break if event.doc.body.include?("file_contents/#{url_encode f.name}") -%>
                  <%- end -%>
                <%- end  -%>

                <%- if file -%>
                  <%= image_tag "#{file.parent.content.public_node.public_uri}#{file.parent.name}/file_contents/#{url_encode file.name}" %>
                <%- else -%>
                  <%- if @content.default_image.blank? -%>
                    画像がありません。
                  <%- else -%>
                    <%= image_tag @content.default_image %>
                  <%- end -%>
                <%- end -%>
                <%- topfile = file -%>

                <%- event.insert_files.each.with_index(1) do |file, index| -%>
                <%= image_tag "#{file.parent.content.public_node.public_uri}#{file.parent.name}/file_contents/#{url_encode file.name}" if topfile.blank? || file.name != topfile.name %>
                <%- break if @content.image_cnt > 0 && index >= @content.image_cnt -%>
                <%- end -%>
              <%- end  -%>
              </p>
            <%- end -%>
          </td>
          <%- end -%>
          <td class="date">
            <%= render 'gp_calendar/public/shared/event_date', event: event, date_style: @content.date_style %>
          </td>
          <td class="<%= event.kind rescue 'event' %>">
            <%= render 'gp_calendar/public/shared/event_list', event: event, list_style: @content.list_style %>
            <%- if event.categories.present? -%>
            <p class="category">
              <%- event.categories.each do |category| -%>
              <span class="category<%= category.name.capitalize %>"><%= category.title %></span>
              <%- end -%>
            </p>
            <%- end -%>
            <%=simple_format event.description, class: 'summary' if event.description.present? %>
          </td>
        </tr>
        <%- end -%>
      </tbody>
    </table>
    <%- end -%>
  <%- else -%>
    本日のイベントはありません。
  <%- end -%>
<!-- end .calendarEvents --></div>
