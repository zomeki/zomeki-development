<%-

return if item.inquiries.size == 0
return if !item.inquiries.any?(&:visible?)

-%><div class="inquiry">
  <div class="h2">お問い合わせ</div>
  <%- item.inquiries.each do |inquiry| -%>
    <%- next unless inquiry.visible? -%>
    <%- if item.inquiry_display_field?(:group_id) && inquiry.group
     -%><div class="section"><%= inquiry.group.full_name %></div><%- end -%>
    <%- if item.inquiry_display_field?(:charge) && inquiry.charge.present?
     -%><div class="charge"><%= inquiry.charge %></div><%- end -%>
    <%- if item.inquiry_display_field?(:tel) && inquiry.tel.present?
     -%><div class="tel">電話番号： <%= tel_to inquiry.tel %></div><%- end -%>
    <%- if item.inquiry_display_field?(:fax) && inquiry.fax.present?
     -%><div class="fax">ファクシミリ： <%= inquiry.fax %></div><%- end -%>
    <%- if item.inquiry_display_field?(:email) && inquiry.email.present?
     -%><div class="email">メールアドレス： <%= email_to inquiry.email %></div><%- end -%>
  <%- end -%>
</div>
