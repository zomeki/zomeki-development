<%

return nil unless item.inquiry
return nil unless item.inquiry.visible?

%>

<table class="show">
  <tr>
    <th>連絡先表示</th>
    <td><%= item.inquiry.state == 'visible' ? '表示' : '非表示' %></td>
  </tr>
  <tr>
    <th>課</th>
    <td><%= safe{item.inquiry.group.full_name} %></td>
<% if false %>
  </tr><tr>
    <th>室・担当</th>
    <td><%= item.inquiry.charge %></td>
<% end %>
  </tr><tr>
    <th>住所</th>
    <td><%= item.inquiry.address %></td>
  </tr><tr>
    <th>電話番号</th>
    <td><%= item.inquiry.tel %>
        <%= item.inquiry.tel_attend %></td>
  </tr><tr>
    <th>ファクシミリ</th>
    <td><%= item.inquiry.fax %></td>
  </tr>
  <% if item.inquiry_email_setting != "hidden" %>
  <tr>
    <th>メールアドレス</th>
    <td><%= item.inquiry.email %></td>
  </tr>
  <% end %>
  </tr><tr>
    <th>備考</th>
    <td><%= item.inquiry.note %></td>
</table>
